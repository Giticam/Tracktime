<h1><%= @project.name %></h1>

<p>Company: <%= @project.company.name %></p>
<p>Default Rate: <%= @project.default_charge %></p>
<p>Owner: <%= @project.user.full_name %></p>


<table>
  <tbody>
    <tr>
      <th>User</th>
      <th>Projects</th>
      <th>Date/time</th>
      <th>Hours</th>
      <th>Details</th>
    </tr>
    <% @project.services.each do |service| %>
      <%= render '/services/service', service: service  %>
    <% end %>
  </tbody>
</table>
<br />
<p><%= link_to "Edit Project", edit_project_path(@project) %></p>
<% content_for :aside do %>
  <%=render 'sidebar'  %>

<% end %>
