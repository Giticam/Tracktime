<ul>
  <li><%= link_to "All Services", services_path %></li>
  <li><%= link_to "New Service", new_service_path %></li>
</ul>

<!-- Trigger the modal with a button -->
<div class="row">
  <%= button_to "All Services", services_path,class:"btn btn-primary btn-sm",method: :get %>
  <br />
  <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#mynewservice">New Service</button>
</div>


<!-- Modal -->
<div class="modal fade" id="mynewservice" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New Service</h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <%= render 'form' %>
            </div>

