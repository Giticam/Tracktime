<div id = "errors">
  <% if @company.errors.any? %>
        <p>Please correct the following: <%= pluralize(@company.errors.count, "error") %>:</p>
        <ul>
          <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
  <% end %>
</div>

<%= simple_form_for @company do |f| %>
<div id="form">
  <%= f.input :name %>
</div>
  <%= f.submit class: "btn btn-default" %>
<% end %>
