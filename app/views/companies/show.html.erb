<h2><%= @company.name %></h2>


<% if @company.projects.size > 0 %>
<table>
  <tbody>
    <tr>
      <th>Projects</th>
      <th>Company</th>
    </tr>
    <% @company.projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, project %></td>
      <td><%= link_to project.company.name, project.company %></td>
    </tr>
    <%end %>
  </tbody>
</table>
<% else %>
  <p>No Projects</p>
<% end %>
<br />
<br />
<p><%= link_to "Edit Company", edit_company_path(@company) %></p>


<% content_for :aside do %>
  <%=render 'sidebar'  %>
<% end %>
